<% breadcrumb :event_edit, @event %>
<div class='schedule-page' id='schedule-page'>
  <div class='schedule-page__inner clearfix'>
    <div class='schedule-page__inner--left schedule-page__header'>
      <h2>スケジュール編集</h2>
      <h5>スケジュール編集が可能です。</h5>
      <%= link_to "スケジュールに戻る", root_path, class: 'btn'%>
    </div>
    <div class='schedule-page__inner--right form'>
      <%= form_with(model: @event, local: true) do |f| %>
      <%= render 'layouts/error_messages', model: f.object %>
        <div class='field'>
          <div class='field-label'>
            <%= f.label 'タイトル'%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :title, autofocus: true%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label 'スタート時刻'%>
            <span class="indispensable">必須</span>
          </div>
          <div class='field-start'>
            <%= f.datetime_select :start_time%>
          </div>
        </div>
        <div class='field'>
          <div class='field-label'>
            <%= f.label '詳細'%>
            <span class="form-any">任意</span>
          </div>
          <div class='field-input'>
            <%= f.text_field :content, autofocus: true%>
          </div>
        </div>
        <div class='actions'>
          <%= f.submit "更新", class: 'btn'%>
        </div>
      <% end %>
    </div>
  </div>
</div>
