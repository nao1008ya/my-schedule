<% breadcrumb :group_new, @group %>
<div class='group-create-form'>
  <h1>グループ作成</h1>
  <%=form_with model: @group, local: true do |f|%>
    <div class='group-create-form__field'>
      <div class='group-error-message'>
        <%= render 'layouts/error_messages', model: f.object %>
      </div>
      <div class='group-create-form__field--left'>
        <%= f.label :グループ名, class: 'group-create-form__label'%>
      </div>
      <div class='group-create-form__field--right'>
        <%= f.text_field :name, class: 'group-create_name group-create-form__input', placeholder: 'グループ名を入力してください'%>
      </div>
    </div>
    <div class='group-create-form__field'>
    </div>
    <div class='group-create-form__field'>
      <div class='group-create-form__field--left'>
        <label class='group-create-form__label' for='group_create_チャットメンバー'>グループメンバー</label>
      </div>
      <div class='group-create-form__field--right'>
        <h5>グループに追加するユーザーを選択してください</h5>
          <ul class="choice__lists" >
              <div class="choice__list">
                <%= f.collection_check_boxes :user_ids, User.where.not(id: current_user.id), :id, :name %>
              </div>
          </ul>
      </div>
      <div id="list">
      </div>
    </div>
    <div class='group-create-form__field'>
      <div class='cgroup-create-form__field--left'></div>
      <div class='group-create-form__field--right'>
        <%= link_to "スケジュールに戻る", root_path, class: 'group-create-form__action-btn'%>
        <%= f.submit "登録", class: 'group-create-form__registration-btn'%>
      </div>
    </div>
  <% end %>
</div>